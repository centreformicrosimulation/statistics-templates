{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy xml files",
      "type": "shell",
      "command": "Copy-Item -Path ./*.xml -Destination C:/ProgramData/EUROMOD/plugins/StatisticsPresenter/UserSelectableTemplates/ -force",
      "windows": {
        "command": "Copy-Item -Path .\\*.xml -Destination C:\\ProgramData\\EUROMOD\\plugins\\StatisticsPresenter\\UserSelectableTemplates -force"
      },
      // group "build" is run with Cntrl + Shift + B
      "group": "build",
      "presentation": {
        // Reveal the output only if unrecognized errors occur.
        //"reveal": "silent"
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
